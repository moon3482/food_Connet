<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ReviewWriting"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">


        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageViewOne"
                android:src="@drawable/ic_baseline_add_photo_alternate_24"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <ImageView
                android:id="@+id/imageViewTwo"
                android:src="@drawable/ic_baseline_add_photo_alternate_24"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <ImageView
                android:id="@+id/imageViewThree"
                android:src="@drawable/ic_baseline_add_photo_alternate_24"
                android:layout_width="100dp"
                android:layout_height="100dp"/>


        </LinearLayout>



        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:gravity="center"
                android:text="업체명"
                android:textSize="23dp"
                android:layout_width="110dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="23dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="23dp"
                android:text="업체주소"
                android:layout_width="110dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="23dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="23dp"
                android:text="맛"
                android:layout_width="110dp"
                android:layout_height="wrap_content"/>


            <RatingBar
                android:id="@+id/ratingStarTaste"
                android:isIndicator="false"
                android:numStars="5"
                android:stepSize="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:gravity="center"
                android:textSize="23dp"
                android:text="서비스"
                android:layout_width="110dp"
                android:layout_height="wrap_content"/>
            <RatingBar
                android:id="@+id/ratingStarService"
                android:isIndicator="false"
                android:numStars="5"
                android:stepSize="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:gravity="center"
                android:textSize="23dp"
                android:text="위생"
                android:layout_width="110dp"
                android:layout_height="wrap_content"/>

            <RatingBar
                android:id="@+id/ratingStarClean"
                android:isIndicator="false"
                android:numStars="5"
                android:stepSize="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:gravity="center"
                android:textSize="23dp"
                android:text="인테리어"
                android:layout_width="110dp"
                android:layout_height="wrap_content"/>
            <RatingBar
                android:id="@+id/ratingStarInterior"
                android:isIndicator="false"
                android:numStars="5"
                android:stepSize="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:hint="리뷰를 작성해주세요"
                android:lines="8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <Button
            android:id="@+id/writingFinishBtn"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="작성완료"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>




    </LinearLayout>

</ScrollView>