<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="5">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ChatRoomUserProfileImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/com_facebook_profile_picture_blank_square" />

    <ImageView
        android:id="@+id/hostUserCrown"
        android:layout_width="17dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:visibility="visible"
        app:layout_anchor="@id/ChatRoomUserProfileImage"
        app:layout_anchorGravity="right"
        app:srcCompat="@drawable/ic_simple_gold_crown" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>


    <TextView
        android:id="@+id/chatUserListId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="2"
        android:paddingStart="10dp"
        android:text="아이디"
        android:singleLine="true"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/userKickButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:background="@android:color/transparent"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_baseline_person_remove_24" />

</LinearLayout>